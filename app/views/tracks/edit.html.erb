<div class="container d-flex flex-column align-items-center"> 
  <h2><%= @track.title %></h2>
  <h4>Your steps</h4>
  <% @track.steps.each do |step| %>
    <div class="card step-card my-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <p><%= step.content_type %></p>
        <p><strong><%= step.title %></strong></p>
        <p><%= link_to 'Delete', track_step_path(@track, step), method: :delete, data: {confirm: 'Are you sure?'}, id: 'delete-text'  %></p>
      </div>
    </div>
  <% end %>
  <div class="card">
    <strong>Add a new step</strong>
    <% if policy(Step).create? %>
      <%= simple_form_for [@track, @step] do |f| %>
        <%= f.input :content_type, collection: ['Image', 'Video', 'PDF', 'PowerPoint', 'Text file'] %>
        <%= f.input :title, input_html: { maxlength: '18' } %>
        <%= f.button :submit, 'Add a step' %>
      <% end %>
    <% end %>
  </div>
  <%= link_to "Back to tracks library", dashboard_track_library_path %>
</div>
