<div class="container d-flex flex-column align-items-center"> 
  <h2><%= @track.title %></h2>
  <h4>Your steps</h4>
  <% @track.steps.each do |step| %>
    <div class="card step-card my-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <p><%= step.content_type %></p>
        <p><strong><%= step.title %></strong></p>
        <% if step.media.attached? %>
          <%= media_link step %>
        <% else %>
          <p>No file attached</p>
        <% end %>
        <%= link_to track_step_path(@track, step), class: "link-styling", method: :delete, data: {confirm: 'Are you sure?'} do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="card">
    <strong>Add a new step</strong>
    <% if policy(Step).create? %>
      <%= simple_form_for [@track, @step] do |f| %>
        <%= f.input :title, input_html: { maxlength: '18' } %>
        <%= f.input :content_type, collection: ['PDF', 'Image', 'Video'], selected: 'PDF' %>
        <%= f.input :media, as: :file %>
        <%= f.button :submit, 'Add a step' %>
      <% end %>
    <% end %>
  </div>
  <%= link_to "Back to tracks library", dashboard_track_library_path %>
</div>
