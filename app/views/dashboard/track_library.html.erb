<!-- Button for Modal -->
<button class="btn-secondary mb-3" data-toggle="modal" data-target="#exampleModal">Create track</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <strong class="modal-title" id="exampleModalLabel">Name your track</strong>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@track) do |f| %>
          <%= f.input :title, input_html: { maxlength: '28'}, label: false %>
          <%= f.button :submit, "Save track", id: 'create-text', class: 'btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h4>Tracks you created</h4>
<div class="row mb-3">
  <% @tracks.where(user: current_user).each do |track| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card mb-3">
        <div class="card-body d-flex flex-column justify-content-between align-items-center">
          <strong><%= link_to track.title, edit_track_path(track), class: 'link-styling' %></strong>
          <p>Contains <%= track.steps.count %> steps</p>
          <%= link_to track_path(track), class: "link-styling", method: :delete, data: {confirm: 'Are you sure?'} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h4>Tracks others created</h4>
<div class="row mb-3">
  <% @tracks.where.not(user: current_user).each do |track| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card mb-3">
        <div class="card-body d-flex flex-column justify-content-between align-items-center">
          <strong><%= track.title %></strong>
          <p>Contains <%= track.steps.count %> steps</p>
        </div>
      </div>
    </div>
  <% end %>
</div>